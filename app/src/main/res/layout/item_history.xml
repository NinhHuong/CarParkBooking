<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/text_margin">

        <TextView
            android:id="@+id/edtGarageName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="GARA NAME qwe sda sdf sdf sdf sdfs "
            android:textAlignment="textStart"
            android:textColor="#00a7f5"
            android:textSize="18dp" />

        <LinearLayout
            android:id="@+id/container_time_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtGarageName"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginTop="@dimen/text_margin">

            <TextView
                android:id="@+id/tvTitleBooked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/time_book"
                android:textAlignment="center" />


            <TextView
                android:id="@+id/tvTitleStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/time_go_in"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvTitleEnd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/time_go_out"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/container_time_title">

            <TextView
                android:id="@+id/tvTimeBooked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00:99:99"
                android:textAlignment="center" />


            <TextView
                android:id="@+id/tvTimeStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00:99:99"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvTimeEnd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00:99:99"
                android:textAlignment="center" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>