<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.quocngay.carparkbooking.activity.BookingActivity">


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <include layout="@layout/app_bar_image" />

        <include layout="@layout/content_booking_detail" />

    </android.support.design.widget.CoordinatorLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true">

    <Button
        android:id="@+id/btn_book_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/custom_button_bg_cancel"
        android:text="@string/booking_detail_cancel"
        android:textColor="@color/text_light_title"
        android:layout_weight="1" />
    <Button
        android:id="@+id/btn_book_refresh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/custom_button_bg"
        android:text="@string/booking_detail_refresh"
        android:textColor="@color/text_light_title"
        android:layout_weight="1" />

</LinearLayout>


</RelativeLayout>
