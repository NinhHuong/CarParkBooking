<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quocngay.carparkbooking.activity.LoginActivity">

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="368dp"
        android:layout_height="150dp"
        android:visibility="visible"
        app:srcCompat="@color/colorPrimaryDark"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="303dp"
        android:layout_height="47dp"
        android:hint="@string/edt_email_hint"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/imgView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imgView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imgView"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="73dp" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="302dp"
        android:layout_height="49dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:inputType="textPassword"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:hint="@string/edt_password_hint"
        app:layout_constraintLeft_toLeftOf="@+id/imgView"
        app:layout_constraintRight_toRightOf="@+id/imgView"
        app:layout_constraintTop_toBottomOf="@+id/edtEmail"
        app:layout_constraintHorizontal_bias="0.522" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_login"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnRegister"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edtPassword"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnForgotPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="-12dp"
        android:layout_marginTop="13dp"
        android:text="@string/btn_forgot_password"
        app:layout_constraintRight_toRightOf="@+id/edtPassword"
        app:layout_constraintTop_toBottomOf="@+id/edtPassword" />
</android.support.constraint.ConstraintLayout>
